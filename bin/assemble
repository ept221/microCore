#!/bin/bash

mkdir -p build/assembled build/images

python3 assembler/assembler.py $1 -o $2
python3 utilities/imageGen.py $2

./utilities/loadImage $2

mv $2".instructions" build/assembled/$2".instructions"
mv $2".data" build/assembled/$2".data"

mv $2"_i_ram_image.hex" build/images/$2"_i_ram_image.hex"
mv $2"_d_ram_image.hex" build/images/$2"_d_ram_image.hex"

rm build/pnr/temp.asc

make pack